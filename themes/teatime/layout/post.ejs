<article>
  <div class="container">
    <header id="blog-header">
      <div class="row front-header">
        <div class="col-12">
          <div class="blog-content">
            <div class="navigation-header">
              <p>🏡 <a href="/">Back Home</a></p>
            </div>
            <h1><%- page.title %></h1>
            <p><em><%- page.intro %></em></p>
          </div>
        </div>
      </div>
    </header>
    <section>
      <div class="row">
        <div class="col-12">
          <div class="blog-content">
            <%- page.content %>
          </div>
        </div>
      </div>
    </div>
  </section>
  <footer>
      <div class="row">
        <div class="col-12">
          <div class="blog-content">
            <p class="blog-meta-info">
              First posted on <%= date(page.date, config.date_format) %> by <%= config.author %>.
            </p>
            <% if (page.updated) { %>
              <p class="blog-meta-info">
                Last updated on <%= date(page.updated, config.date_format) %>.
              </p>              
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </footer>
</article>

<%- partial('navigation-footer') %>
<div class="navigation-footer">
  <p>🏡 <a href="/">Home</a></p>
</div>
